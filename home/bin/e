#!/bin/bash
set -x
if [[ $TERM == xterm && $(tput colors) == "256" ]]
then
  export TERM=xterm-256color
fi

ec() {
  local isterm
  ARGS=("-c")
  if tmux showenv 2>&1 | grep -q '^SSH_CONNECTION'
  then
    # In a terminal
    isterm=1
  elif [[ -n "$SSH_CONNECTION" ]]
  then
    isterm=1
  elif [[ -z "$DISPLAY" ]]; then
    isterm=1
  fi

  if [[ $isterm == 1 ]]
  then
    ARGS+=("-t")
  fi
  if [[ $# == 0  ]]
  then
    if [[ $isterm != 1 ]]
    then
        ARGS+=("-n")
    fi
    ARGS+=("-e (dired-jump)")
  fi

  #if [[ "${ARGS[@]} $@ " =~ ' -t ' ]]
  #then
    #export TERM=${TERM%-256*}
  #fi

  # echo ${ARGS[@]}
  #exit 0
  if [[ $(uname) == "Darwin" ]]
  then
    #need to raise emacs window
    file=/tmp/emacs*/server
    ARGS+=("--socket-name $file")
    emacsclient ${ARGS[@]} $*
    sleep 1
    osascript -e 'if application "Emacs" is running then tell application "Emacs" to activate' 2>&1 > /dev/null
  else
    emacsclient -a "" ${ARGS[@]} $*
  fi
}
if [[ $(uname) == "Darwin" ]]
then
    if [[ -n $( pgrep -i -f emacs ) ]]
    then
        ec $*
    else
        emacs --debug-init --daemon && sleep 1 && ec $*
    fi
else
    ec $*
fi
#reset
